{
  "trigger": {
    "schedule": {
      "interval": "5m"
    }
  },
  "input": {
    "search": {
      "request": {
        "indices": ["esp32-logs-*"],
        "body": {
          "query": {
            "bool": {
              "must": [
                {
                  "terms": {
                    "severity": ["error", "critical"]
                  }
                },
                {
                  "range": {
                    "@timestamp": {
                      "gte": "now-15m"
                    }
                  }
                }
              ]
            }
          },
          "size": 0,
          "aggs": {
            "error_count": {
              "value_count": {
                "field": "@timestamp"
              }
            },
            "by_device": {
              "terms": {
                "field": "device_name",
                "size": 10
              }
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.aggregations.error_count.value": {
        "gte": 10
      }
    }
  },
  "actions": {
    "log_warning": {
      "logging": {
        "level": "warn",
        "text": "High error rate detected on ESP32 devices: {{ctx.payload.aggregations.error_count.value}} errors in last 15 minutes"
      }
    },
    "index_alert": {
      "index": {
        "index": "esp32-alerts",
        "doc_id": "high-error-rate-{{ctx.execution_time}}",
        "body": {
          "alert_type": "high_error_rate",
          "timestamp": "{{ctx.execution_time}}",
          "error_count": "{{ctx.payload.aggregations.error_count.value}}",
          "message": "High error rate: {{ctx.payload.aggregations.error_count.value}} errors in last 15 minutes",
          "severity": "warning",
          "devices": "{{ctx.payload.aggregations.by_device.buckets}}"
        }
      }
    }
  },
  "metadata": {
    "name": "ESP32 High Error Rate Alert",
    "description": "Alerts when 10 or more errors occur within 15 minutes"
  }
}
